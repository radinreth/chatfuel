#mostRequest.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "newSiteLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered{:role => "document"}
    .modal-content
      = simple_form_for :variable, url: set_most_request_dictionaries_path do |f|
        .modal-header
          .modal-title= t("dashboard.choose_dictionary_name")
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          = f.input :filter, label: false, class: "form-control", placeholder: t("dashboard.type_search")
          #accordionExample.accordion
            - Variable.includes(:values).all.each do |variable|
              .card
                #headingOne.card-header.p-1
                  %h2.mb-0.pl-3
                    = hidden_field nil, "variable[attributes][][id]", value: variable.id, id: "variable_attributes_id_#{variable.id}"
                    = radio_button nil, "variable[attributes][][is_most_request]", variable.id, checked: variable.is_most_request?
                    %button.pl-0.text-decoration-none.btn.btn-link.collapse-most-request{"aria-controls" => "collapseOne", "aria-expanded" => "true", "data-target" => "#collapse#{variable.name}", "data-toggle" => "collapse", :type => "button" }
                      = variable.name
                .collapse{id: "collapse#{variable.name}", "aria-labelledby" => "headingOne", "data-parent" => "#accordionExample"}
                  .card-body
                    %ul.value-list
                      - variable.values.each do |value|
                        %li= value.raw_value
        .modal-footer
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}
            = t("cancel")
          = f.submit t("save_changes"), class: "btn btn-primary"
