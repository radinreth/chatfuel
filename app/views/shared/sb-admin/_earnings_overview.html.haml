.row
  .col-xl-6.col-lg-5
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        .h5.m-0.font-weight-bold.text-primary
          = t("dashboard.total_user_visit")
      .card-body
        .pt-4.pb-2.d-flex.justify-content-around.align-items-center
          %ul.list-unstyled
            %li
              %span.oval.oval--green
              %span.oval-label OWSO Info
            %li
              %span.oval.oval--blue
              %span.oval-label Feedback
            %li
              %span.oval.oval--yellow
              %span.oval-label Ticket Tracking

          = pie_chart total_users_visit_each_functions, colors: ['#4e73df', '#1cc88a', '#f6c23e'], width: "200px", height: "200px", donut: true, legend: false, messages: { empty: "no data" }, library: { cutoutPercentage: 80 }

  .col-xl-6.col-lg-5
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        .h5.m-0.font-weight-bold.text-primary
          = t("dashboard.total_user_feedback")
      .card-body
        .pt-4.pb-2.d-flex.justify-content-around.align-items-center
          %ul.list-unstyled
            %li
              %span.oval.oval--green
              %span.oval-emoji üòç
              %span.oval-label-km
                = t("dashboard.like")
            %li
              %span.oval.oval--blue
              %span.oval-emoji üòä
              %span.oval-label-km
                = t("dashboard.acceptable")
            %li
              %span.oval.oval--yellow
              %span.oval-emoji üòû
              %span.oval-label-km
                = t("dashboard.dislike")

          = pie_chart total_users_feedback, width: "200px", height: "200px", donut: true, legend: false, messages: { empty: "no data" }, library: { cutoutPercentage: 80 }

  .col-xl-6.col-lg-5
    .card.shadow.mb-4
      .card-header.py-3
        .h5.m-0.font-weight-bold.text-primary
          = t("dashboard.number_of_tracked_ticket")
      .card-body
        = column_chart number_of_tracking_tickets, library: { scales: { xAxes: [{ barThickness: 30 }] } }
