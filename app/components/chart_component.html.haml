.card.shadow.mb-4{ role: "figure" }
  .card-header.position-relative
    .d-flex.flex-row.align-items-center.justify-content-between
      .h5.m-0.font-weight-bold.d-flex.justify-content-center.align-items-center
        %span.text-primary.d-inline-block.mr-1.chart-head.text-capitalize{ data: { toggle: "tooltip", title: hint } }
          = @name
        - if hint.present?
          %span{ data: { toggle: "tooltip", title: hint } }
            %i.icon-hint.far.fa-question-circle
        = addon
      .tools
        - if @downloadable
          = link_to "#", class: "chart-dl text-dark", data: { name: @name, toggle: "tooltip", title: t(:download_chart) } do
            %i.fa.fa-download
        = config
    %span.card-subheader.position-absolute
      = subheader

    .tools
      = link_to "#", class: "chart-dl text-dark", "data-target": "##{@id}" do
        %i.fa.fa-download

  .card-body
    .chart-wrapper.pt-4.d-flex.justify-content-around.align-items-center.position-relative
      - if @filterable
        %p.loading.position-absolute.d-none
          = t("loading")
    .pt-4.d-flex.justify-content-around.align-items-center{ id: @id }
      = body
